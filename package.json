{
  "name": "backend",
  "version": "1.0.0",
  "main": "src/server.js",
  "repository": "git@github.com:duchicong/projects-management.git",
  "author": "CONG.DU <Duconggpdg@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --exec \"ts-node\" -r tsconfig-paths/register src/server.ts",
    "lint": "eslint --fix -c .ts,.js,.json .",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\""
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "exec": "tsc && node ./dist/main.js",
    "ext": "ts,js,json"
  },
  "dependencies": {
    "dotenv": "16.4.5",
    "express": "4.19.2",
    "morgan": "1.10.0",
    "mysql2": "^3.10.0",
    "sequelize": "6.37.3",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.4.5"
  },
  "devDependencies": {
    "@eslint/js": "9.3.0",
    "@types/express": "4.17.21",
    "@types/morgan": "1.9.9",
    "@types/node": "20.12.13",
    "eslint": "9.x",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "globals": "15.3.0",
    "nodemon": "3.1.2",
    "prettier": "3.2.5",
    "ts-node": "10.9.2",
    "typescript-eslint": "7.11.0"
  }
}
